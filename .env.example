# Environment Variables Template
# Copy this file to .env.local and fill in your API keys

# Microsoft Azure Speech Services
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Google Cloud Text-to-Speech
GOOGLE_TTS_KEY=your_google_tts_api_key_here

# ElevenLabs TTS
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# WebSocket Server (optional - for real-time chat)
WEBSOCKET_URL=wss://frontend.avarynx.mywire.org/api/chat/ws

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=https://frontend.avarynx.mywire.org

# Base URL do backend FastAPI para as rotas /api/auth
# Em produção aponte para o domínio público (ex: https://api.seudominio.com)
NEXT_PUBLIC_API_BASE=https://api.avarynx.mywire.org
